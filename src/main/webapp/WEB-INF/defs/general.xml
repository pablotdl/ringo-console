    <definition name="admin.invocation.form" extends="base.definition">
        <put-attribute name="body" value="/WEB-INF/pages/admin/invocation/form.jsp" />
        <put-attribute name="entity" type="string" value="Invocation" cascade="true" />
        <put-attribute name="uri" value="invocation" cascade="true" />
    </definition>    
 
